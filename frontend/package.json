{
  "name": "hohatch-frontend",
  "version": "1.0.4",
  "private": true,
  "type": "module",
  "scripts": {
    "backend": "run-script-os",
    "backend:windows": "cd .. && venv\\Scripts\\python -m scripts.version_management.manager update_backend_version_entry_point && venv\\Scripts\\pyinstaller backend\\specs\\build-windows-release.spec",
    "backend-test": "cd .. && set \"PYTHONPATH=%CD%\\backend\\;%PYTHONPATH%\" && venv\\Scripts\\pytest backend\\",
    "build": "npm run frontend && npm run backend",
    "clean": "jest --clearCache",
    "dev": "npm run update-readme-version && npm run frontend && run-script-os",
    "dev:windows": "cd .. && cross-env HOHATCH_DEBUG=true venv\\Scripts\\python -m backend.main",
    "freeze": "run-script-os",
    "freeze:windows": "cd .. && venv\\Scripts\\pip freeze > requirements.txt",
    "frontend": "next build",
    "frontend-test": "npm run lint:fix && npm run lint:check && cross-env NODE_OPTIONS=\"--experimental-vm-modules --max-old-space-size=4096\" jest --runInBand",
    "init": "npm run init:frontend && npm run init:python",
    "init:frontend": "npm install",
    "init:python": "cd .. && python -m venv venv && venv\\Scripts\\pip install -r requirements.txt",
    "lint:check": "npm exec eslint -- --ext .js,.jsx,.mjs,.ts,.tsx && tsc --noEmit",
    "lint:fix": "npm exec eslint -- --fix --ext .js,.jsx,.mjs,.ts,.tsx && npm exec prettier -- --write \"**/*.{ts,tsx}\" > NUL",
    "lint:fix:windows": "npm exec eslint -- --fix --ext .js,.jsx,.mjs,.ts,.tsx && npm exec prettier -- --write \"**/*.{ts,tsx}\" > NUL",
    "preflight": "npm run frontend-test && npm run backend-test",
    "update-readme-version": "cd .. && venv\\Scripts\\python -m scripts.version_management.manager update_all_versions_entry_point"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@heroui/react": "^2.8.1",
    "@heroui/system": "^2.4.20",
    "@types/react-responsive": "^8.0.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "next": "15.4.3",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-feather": "^2.0.10",
    "react-responsive": "^10.0.1",
    "sonner": "^2.0.6",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/compat": "^1.3.1",
    "@eslint/eslintrc": "^3",
    "@next/eslint-plugin-next": "^15.5.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.9",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "cross-env": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "jest": "^30.1.1",
    "jest-environment-jsdom": "^30.1.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "run-script-os": "^1.1.6",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.7"
  }
}
